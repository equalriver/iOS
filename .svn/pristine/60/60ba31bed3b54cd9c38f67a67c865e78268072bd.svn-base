#import <Aspects.h>
#import "UILabel+WLKTSetup.h"

@implementation UILabel (WLKTSetup)
#ifdef DEBUG
+ (void)load{
    [self aspect_hookSelector:@selector(drawRect:) withOptions:AspectPositionAfter usingBlock:^(id<AspectInfo> aspectInfo){
        
        if ([aspectInfo.instance isKindOfClass:[UILabel class]]) {
            UILabel *l = (UILabel *)(aspectInfo.instance);
            if (l.text == nil) {
                
                l.text = l.numberOfLines == 0 ? @"testtesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttesttest" : @"testtesttesttest";
            }
        }
        
    } error:nil];
}
#endif
@end
